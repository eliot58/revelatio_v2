generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  tgId   BigInt   @id
  wallet String?
}

model Link {
  id          Int     @id @default(autoincrement())
  invite_link String  @unique
  wallet      String
  user_id     BigInt?
  chat        Chat
  expired_at  DateTime
  created_at  DateTime @default(now())

  @@index([user_id])
  @@unique([wallet, chat], name: "wallet_chat")
}

enum Chat {
  grouche_dao
  grouche_whales
  notwise_holders
}
