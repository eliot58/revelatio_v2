generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  tgId   BigInt  @id
  wallet String?

  memberships Member[]
}

model Member {
  chat      Chat

  userId    BigInt
  user      User   @relation(fields: [userId], references: [tgId], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@id([userId, chat])
  @@index([chat])
}

enum Chat {
  grouche_dao
  grouche_whales
  notwise_holders
}